<!--Saved Articles Page-->

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Saved Articles</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <button type="button" class="btn btn-primary" id="scrape">Scrape for Articles</button>
            <button type="button" class="btn btn-primary" id="saved">Saved Articles</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{#if article}}
                {{#each article}}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.summary}}</p>
                            <a href="{{this.link}}" target="_blank" class="card-link">{{this.link}}</a><br>
                            <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                            <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                        </div>
                    </div>
                {{/each}}
            {{else}}
            <div>
                <h4>There are no saved articles</h4>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}